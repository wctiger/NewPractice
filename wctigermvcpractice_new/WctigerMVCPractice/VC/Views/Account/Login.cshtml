@model VC.UIModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Login</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Log In</h3>
    </div>
    <div class="panel-body">
        <p class="lead">
            Please log in to access admin area
        </p>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>User Name</label>
                @Html.TextBoxFor(vm => vm.UserName, new { @class="form-control" })
            </div>
            <div class="form-group">
                <label>Password</label>
                @Html.PasswordFor(vm => vm.Password, new { @class="form-control" })
            </div>
            <input type="submit" value="Log In" class="btn btn-success" />
        }
    </div>
    <div class="panel-footer">
        @Html.ActionLink("New User", "CreateUser", "Account", new { @class = "btn btn-primary" })
    </div>
</div>

